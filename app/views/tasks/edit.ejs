<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.tasks() %>">tasks</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Edit task</a></li>
</ul>

<div class="page-header">
    <h1>Edit task</h1>
</div>

<% var form = formFor(task, {action: pathTo.task(task), method: 'PUT', id: "task-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Update task', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.task(task), {class: 'btn'}) %>
</div>
<%- form.end() %>
